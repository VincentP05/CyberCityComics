<body>
    <div class="wrapper"> 
        <div class ="header"> 
            <h1 id ="title">Cyber City Comics</h1>
        </div>
        <div class = "nav">
            <button class="prev" value ="<%=number%>">Prev</button>
            <button class = "rand">Random</button>
            <button class ="next" value ="<%=number%>">Next</button>
        </div>
    <div id ="comic">
        <h1><%=title%></h1>
        <h5><%=month%>/<%=day%>/<%=year%></h5>
        <img src ="<%=image%>" alt ="<%=alt%>"/>
        <p id = "num">Comic No. <%=number%></p>
    </div>
    
 <div id="script">   
</br> 
  <%let newStart = 0%>
  <%let newLineCount = 0%>
  <% for(let i=0;i<transcript.length; i++){ %>
  <%if (transcript[i]==="@") {%>
  <%newLineCount +=1 %>
  <%transcript[i] = " " %>
  <br/>
  <%let temp = transcript.slice(newStart, i) %>  
  <%newStart = i + 1%>
  <p><%- temp%> </p>
  <%}%>
<%}%>
<%if(newLineCount == 0) {%>
    <p><%=transcript%></p>
    <%}%>
</div>
